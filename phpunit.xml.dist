<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.1/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    cacheResultFile="cache/phpunit/phpunit.result.cache"
    forceCoversAnnotation="true"
    colors="true"
    verbose="true">

    <logging>
        <log type="coverage-html" target="test-results/phpunit/coverage-html"/>
        <log type="coverage-xml" target="test-results/phpunit/coverage-xml"/>
        <log type="coverage-clover" target="test-results/phpunit/clover.xml"/>
        <log type="junit" target="test-results/phpunit/junit.xml"/>
    </logging>

    <testsuites>
        <testsuite name="Assertion Tests">
            <directory>src/Assertion/tests</directory>
        </testsuite>
        <testsuite name="Equality Tests">
            <directory>src/Equality/tests</directory>
        </testsuite>
        <testsuite name="Float Tests">
            <directory>src/Float/tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src/*/src</directory>
        </whitelist>
    </filter>

</phpunit>
