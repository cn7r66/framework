{
    "name": "vivarium/framework",
    "description": "The Vivarium Framework",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Luca Cantoreggi",
            "email": "luca@cn7r66.com"
        }
    ],
    "require": {
        "php": ">= 7.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.0",
        "infection/infection": "^0.21",
        "phpmd/phpmd": "^2.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Vivarium\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vivarium\\Test\\": "tests/"
        }
    }
}
